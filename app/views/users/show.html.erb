<h1>Your Profile</h1>
<% if @user.facebook %>
    <%= render partial: "facebook", locals: {user: @user} %>
<% else %>
    <%= render partial: "standard", locals: {user: @user} %>
<% end %>
<h3>Your Reviews</h3>
<% if @user.reviews.empty? %>
    You have written no reviews.
<% else %>
    <% @user.reviews.each do |review| %>
        <p>Restaurant : <%= link_to review.restaurant.name, restaurant_path(review.restaurant) %><br>
        Rating : <%= review.rating %><br>
        <%= link_to review.short, user_review_path(@user, review) %><br></p>
    <% end %>
<% end %>
<% if !review.errors.empty? %>
    <div class="error">
    <h4>Please correct the following errors.</h4><ul>
    <% review.errors.full_messages.each do |error| %>
        <li><%= error %>.</li>
    <% end %>
    </ul>
    </div>
<% end %>
<%= form_for review do |f| %>
    <p>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :restaurant_id, value: review.restaurant.id %>
    <p><%= f.label :rating, 'Rating : ' %>
    <%= f.select :rating, Array(1..5) %></p>
    <p><%= f.text_area :content, class: "review" %></p>
    <%= f.submit %>
    </p>
<% end %>